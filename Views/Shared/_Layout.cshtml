<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaisSabor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MaisSabor.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3 roxo">
            <img src="img/logo.png">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MaisSabor</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Menu"
                            asp-action="Index">Categoria</a>
                    </li>
                    <li class="nav-item">
                        @await Component.InvokeAsync("CategoriaMenu")
                    </li>
                    <li class="nav-item">

                        <form class="navbar-form navbar-right" asp-controller="Item" asp-action="Search" method="get">

                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Procurarproduto"
                                    name="searchString" value="@ViewData["searchString"]">
                            </div>
                        </form>
                    </li>
                    <li>
                        @await Component.InvokeAsync("CarrinhoResumo")
                    </li>
                    <button class="bg-primary rounded-pill text-light px-4 ms-auto me-2">Cadastre-se</button>
                    <button class="bg-primary rounded-pill text-light px-4 ">Login</button>
                    <img src="img/home.png">
                    <img src="img/carrinho.png">
                </ul>
            </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="container">
                <img src="img/img.png">
            </div>
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted d-flex justify-content-between roxo">
        <div class="col">
            <div class="hstack">
                <img src="img/localização.png">
                <a class="text-light">Endereço:</a>
            </div>
            <p class="text-light">Av. Brasília</p>
        </div>

        <div class="col">
            <div class="hstack">
                <img src="img/horário.png">
                <a class="text-light">Aberto:</a>
            </div>
            <p class="text-light">Terça-domingo 13h - 22h</p>
        </div>

        <div class="col">
            <div class="hstack">
                <img src="img/tel.png">
                <a class="text-light">Telefone:</a>
            </div>
            <p class="text-light">0000-0000</p>
        </div>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
